module Std.Collections.List 

-- A pair list is either empty or a pair of an element and a pair list.
@pub
data List a = [] | a :: List a

-- | `length` returns the length of a finite list as a `Nat`.
@pub
length : [a] -> Nat
length = foldl' (\c _ -> c + 1) 0

pub def length' : [a] -> Nat = 
  foldl' (\c _ -> c + 1) 0

-- | `map` takes a function `f` and a list `xs` and returns the list of
-- the results of applying `f` to each element of `xs`.
@pub
map : (a -> b) -> [a] -> [b]
map f [] = []
map f (x::xs) = f x :: map f xs

pub def map : (a -> b) -> [a] -> [b] = 
  | f [] = []
  | f (x::xs) = f x :: map f xs

@pub
foldl : (a -> b -> a) -> a -> [b] -> a
foldl f acc [] = acc
foldl f acc (x::xs) = foldl f (f acc x) xs

@pub
foldl' : (a -> b -> a) -> a -> [b] -> a
foldl' f !acc [] = acc
foldl' f !acc (x::xs) = foldl' f (f acc x) xs

@pub
foldr : (a -> b -> b) -> b -> [a] -> b
foldr f acc [] = acc
foldr f acc (x::xs) = f x (foldr f acc xs)

@pub
filter : (a -> Bool) -> [a] -> [a]
filter f [] = []
filter f (x::xs) if f x = x :: filter f xs 
filter f (_::xs) = filter f xs

@pub
concat : [[a]] -> [a]
concat [] = []
concat (x::xs) = x ++ concat xs

@pub
concatMap : (a -> [b]) -> [a] -> [b] 
concatMap = concat . map

@pub
(++) : [a] -> [a] -> [a]
[] ++ ys = ys
(x::xs) ++ ys = x :: (xs ++ ys)

@pub
reverse : [a] -> [a]
reverse = foldl' (flip (::)) []

@pub
zip : [a] -> [b] -> [(a, b)]
zip [] _ = []
zip _ [] = []
zip (x::xs) (y::ys) = (x, y) :: zip xs ys

@pub
zipWith : (a -> b -> c) -> [a] -> [b] -> [c]
zipWith f [] _ = []
zipWith _ [] = []
zipWith (x::xs) (y::ys) = f x y :: zipWith f xs ys

@pub
unzip : [(a, b)] -> ([a], [b])
unzip [] = ([], [])
unzip (x, y) :: xs = let (xs1, ys1) = unzip xs in (x :: xs1, y :: ys1)

@pub
foldl1 : (a -> a -> a) -> [a] -> a
foldl1 f (x::xs) = foldl f x xs

@pub
foldr1 : (a -> a -> a) -> [a] -> a
foldr1 f (x::xs) = foldr f x xs

@pub
all? : (a -> Bool) -> [a] -> Bool
all? f [] = true
all? f (x::xs) = f x && all? f xs

@pub
any? : (a -> Bool) -> [a] -> Bool
any? f [] = false
any? f (x::xs) = f x || any? f xs

@pub
elem? : a -> [a] -> Bool
elem? x [] = false
elem? x (y::ys) = if x = y then true else elem? x ys

@pub
sum : Num a => [a] -> a 
sum = foldl' (+) 0

@pub
product : Num a => [a] -> a
product = foldl' (*) 1

@pub
take : Nat -> [a] -> [a]
take n ls
  | 0 < n = unsafeTake n ls
  | otherwise = []
  where
    -- A version of take that takes the whole list if given an argument
    -- less than 1
    unsafeTake :: Nat -> [a] -> [a]
    unsafeTake !_ [] = []
    unsafeTake 1 (x:_) = [x]
    unsafeTake m (x:xs) = x :: unsafeTake (m - 1) xs

pub def take (n : Nat) (ls : [a]) : [a] = 
  if n <= 0 then [] else unsafeTake n ls
  where
    def unsafeTake :: Nat -> [a] -> [a] =
      | !_ [] = []
      | 1 (x:_) = [x]
      | m (x:xs) = x :: unsafeTake (m - 1) xs

@pub
drop : Nat -> [a] -> [a]
drop n ls
  | n <= 0 = ls
  | otherwise = unsafeDrop n ls
  where
    -- A version of drop that drops the whole list if given an argument
    -- less than 1
    unsafeDrop :: Nat -> [a] -> [a]
    unsafeDrop !_ [] = []
    unsafeDrop 1 (_:xs) = xs
    unsafeDrop m (_:xs) = unsafeDrop (m - 1) xs

@pub
takeWhile : (a -> Bool) -> [a] -> [a] 
takeWhile f [] = []
takeWhile f (x::xs) if f x = x :: takeWhile f xs
takeWhile _ _ = []

@pub
dropWhile : (a -> Bool) -> [a] -> [a]
dropWhile f [] = []
dropWhile f (x::xs) if f x = dropWhile f xs
dropWhile _ (x::xs) = x :: xs

@pub
splitAt : Nat -> [a] -> ([a], [a])
splitAt n ls
  | n <= 0 = ([], ls)
  | otherwise = splitAt' n ls
  where
    splitAt' :: Int -> [a] -> ([a], [a])
    splitAt' _ [] = ([], [])
    splitAt' 1 (x:xs) = ([x], xs)
    splitAt' m (x:xs) = (x:xs', xs'')
      where
        (xs', xs'') = splitAt' (m - 1) xs

@pub
span : (a -> Bool) -> [a] -> ([a], [a])
span _ xs@[] = (xs, xs)
span p xs@(x:xs')
         | p x = let (ys,zs) = span p xs' in (x:ys,zs)
         | otherwise = ([],xs)

@pub
intersperse : a -> [a] -> [a]
intersperse x [] = []
intersperse x (y::ys) = y :: x :: intersperse x ys

@pub
intercalate : [a] -> [[a]] -> [a]
intercalate xs xss = concat (intersperse xs xss)

instance Functor [a] where
  map f xs = foldr (fun x acc -> f x :: acc) [] xs
  (<$) x xs = map (fun _ -> x) xs
  (<$>) f xs = map f xs
  (<*>) fs xs = foldr (fun f acc -> map f xs ++ acc) [] fs

instance Applicative [a] where
  pure x = [x]
  (<*>) fs xs = foldr (fun f acc -> map f xs ++ acc) [] fs
  (<$) x xs = map (fun _ -> x) xs
  (<*>) fs xs = foldr (fun f acc -> map f xs ++ acc) [] fs
  liftA2 f xs ys = foldr (fun x acc -> map (f x) ys ++ acc) [] xs

instance Monad [a] where
  (>>=) xs f = foldr (fun x acc -> map f x ++ acc) [] xs
  (>>) xs ys = foldr (fun _ acc -> ys ++ acc) [] xs
  join xs = foldr (fun x acc -> x ++ acc) [] xs
  fail msg = []
  zero = []
  plus xs ys = foldr (fun x acc -> x ++ acc) ys xs